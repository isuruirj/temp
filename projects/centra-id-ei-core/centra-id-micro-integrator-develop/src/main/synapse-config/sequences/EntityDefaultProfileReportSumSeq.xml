<?xml version="1.0" encoding="UTF-8"?>
<sequence name="DefaultProfileReportSumSeq" onError="FaultSeq" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
        <property name="DefaultProfileReportSumSeq" value="Inicio.." />
        <property name="uri.var.field" expression="get-property('uri.var.field')"/>
    <log level="custom" category="DEBUG">
    </log>
    <property action="remove" name="REST_URL_POSTFIX" scope="axis2" />
    <property name="messageType" scope="axis2" type="STRING" value="application/json" />
    <property name="Accept" scope="transport" type="STRING" value="application/json" />
    <property action="remove" name="Content-Type" scope="transport" />
    <property expression="$ctx:query.param.id" name="id" scope="default" type="STRING" />
    <property expression="$ctx:query.param.globalProfileCode" name="globalProfileCode" scope="default" type="STRING" />
    <property expression="$ctx:query.param.globalProfileName" name="globalProfileName" scope="default" type="STRING" />
    <property expression="$ctx:query.param.globalProfileStatus" name="globalProfileStatus" scope="default" type="STRING" />
    <property expression="$ctx:query.param.defaultProfileCompanyCode" name="defaultProfileCompanyCode" scope="default" type="STRING" />
    <property expression="$ctx:query.param.defaultProfileDivisionCode" name="defaultProfileDivisionCode" scope="default" type="STRING" />
    <property expression="$ctx:query.param.defaultProfileAreaCode" name="defaultProfileAreaCode" scope="default" type="STRING" />
    <property expression="$ctx:query.param.defaultProfileDepartmentCode" name="defaultProfileDepartmentCode" scope="default" type="STRING" />
    <property expression="$ctx:query.param.defaultProfilePositionName" name="defaultProfilePositionName" scope="default" type="STRING" />
    <property expression="$ctx:query.param.valid" name="valid" scope="default" type="STRING" />
    <script language="nashornJs"><![CDATA[
        @add.where.js.function
        function operatorType(value) {
            if(value.indexOf("*")!=-1 ) {
                return " LIKE ";
            } else {
                return " = ";
            }
        }
        var log = mc.getServiceLog();
        var where = " WHERE defaultProfileReport.valid=1 ";
        var innerJoin = "";
        where += addWhere("id","Integer","defaultProfileReport","id");
        where += addWhere("globalProfileCode","String","defaultProfileReport","global_profile_code");
        where += addWhere("globalProfileName","String","defaultProfileReport","global_profile_name");
        where += addWhere("globalProfileStatus","String","defaultProfileReport","global_profile_status");
        where += addWhere("defaultProfileCompanyCode","String","defaultProfileReport","default_profile_company_code");
        where += addWhere("defaultProfileDivisionCode","String","defaultProfileReport","default_profile_division_code");
        where += addWhere("defaultProfileAreaCode","String","defaultProfileReport","default_profile_area_code");
        where += addWhere("defaultProfileDepartmentCode","String","defaultProfileReport","default_profile_department_code");
        where += addWhere("defaultProfilePositionName","String","defaultProfileReport","default_profile_position_name");
        where += addWhere("valid","Integer","defaultProfileReport","valid");
        mc.setProperty("uri.var.whereclause",where);
        mc.setProperty("uri.var.innerjoinclause",innerJoin);

        // FIELD
        var field = "defaultProfileReport."+mc.getProperty("uri.var.field");
        mc.setProperty("uri.var.field",field);

        log.debug(where);]]></script>

    <property value="sch_centra_id.DEFAULT_PROFILES_REPORT_VW defaultProfileReport" name="uri.var.table" scope="default" type="STRING"/>
    <property value="SUM" name="uri.var.function" scope="default" type="STRING"/>

    <call>
        <endpoint name="DefaultProfileReportDSS_Endpoint" template="HTTPEndpointGetTemplate"
              uri="{uri.var.dataServiceHost}/report.default-profile-report.ds.HTTPEndpoint/GetFunctionResultDefaultProfileReport?function={uri.var.function}&amp;whereclause={uri.var.whereclause}&amp;field={uri.var.field}&amp;table={uri.var.table}&amp;innerjoinclause={uri.var.innerjoinclause}" />

    </call>

    <property expression="json-eval($.Fault.faultcode)" name="faultCode" scope="default" type="STRING"/>
    <filter regex="true" source="boolean(get-property('faultCode'))">
        <then>
            <sequence key="FaultSeq"/>
        </then>
        <else>
            <payloadFactory media-type="json">
                <format>
                    {
                        "sum": $1
                    }
                </format>
                <args>
                    <arg evaluator="json" expression="$.result.value"/>
                </args>
            </payloadFactory>
            <property name="HTTP_SC" scope="axis2" type="STRING" value="200"/>
        </else>
    </filter>
    <log level="custom" category="DEBUG">
        <property name="DefaultProfileReportSumSeq" value="Fin.." />
    </log>
    <respond />
</sequence>
