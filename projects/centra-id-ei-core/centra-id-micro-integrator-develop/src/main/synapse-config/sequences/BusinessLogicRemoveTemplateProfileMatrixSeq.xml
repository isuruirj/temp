<?xml version="1.0" encoding="UTF-8"?>
<sequence name="BusinessLogicRemoveTemplateProfileMatrixSeq" onError="FaultSeq" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <log level="custom" category="DEBUG">
        <property name="BusinessLogicRemoveTemplateProfileMatrixSeq.*" value="Inicio.." />
        <property name="templateProfileMatrixGroupId" expression="//templateProfileMatrixGroupId" />
    </log>
    <property name="uri.var.templateProfileMatrixGroupId" expression="//templateProfileMatrixGroupId" />
    <filter regex="true" source="boolean($ctx:uri.var.templateProfileMatrixGroupId)">
        <then>
            <call>
                <endpoint template="HTTPEndpointDeleteTemplate" uri="{uri.var.enterpriseIntegratorHost}/api.centraid/application/TemplateProfileMatrixGroup/{uri.var.templateProfileMatrixGroupId}" />
            </call>
            <filter regex="202" source="get-property('axis2', 'HTTP_SC')">
                <then>
                    <payloadFactory media-type="json">
                        <format>
                            {
                                "result": "0",
                                "message" : "Operation performed successfully"
                            }
                        </format>
                        <args />
                    </payloadFactory>
                </then>
                <else>
                    <property name="fault" value="Error delete  TemplateProfileMatrixGroup" />
                    <sequence key="FaultSeq" />
                </else>
            </filter>
        </then>
        <else>
            <payloadFactory media-type="json">
                <format>
                    {
                        "result": "-1",
                        "message" : "templateProfileMatrixGroupId is missing"
                    }
                </format>
                <args />
            </payloadFactory>
        </else>
    </filter>
    <property name="HTTP_SC" scope="axis2" type="STRING" value="200" />
    <log level="custom" category="DEBUG">
        <property name="BusinessLogicRemoveTemplateProfileMatrixSeq.*" value="Fin.." />
    </log>
</sequence>