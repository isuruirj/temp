<?xml version="1.0" encoding="UTF-8"?>
<sequence name="CatalogTypeFromToSeq" onError="FaultSeq" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <log level="custom">
        <property name="CatalogTypeFromToSeq" value="Inicio.." />
    </log>
    <property action="remove" name="REST_URL_POSTFIX" scope="axis2" />
    <property name="messageType" scope="axis2" type="STRING" value="application/xml" />
    <property name="Accept" scope="transport" type="STRING" value="application/xml" />
    <property action="remove" name="Content-Type" scope="transport" />
    <property expression="$ctx:query.param.orderby" name="uri.var.orderby" scope="default" type="STRING" />
    <property expression="$ctx:query.param.id" name="id" scope="default" type="STRING" />
    <property expression="$ctx:query.param.code" name="code" scope="default" type="STRING" />
    <property expression="$ctx:query.param.name" name="name" scope="default" type="STRING" />
    <property expression="$ctx:query.param.sortType" name="sortType" scope="default" type="STRING" />
    <property expression="$ctx:query.param.editable" name="editable" scope="default" type="STRING" />
    <property expression="$ctx:query.param.valid" name="valid" scope="default" type="STRING" />
    <property expression="$ctx:query.param.description" name="description" scope="default" type="STRING" />
    <script language="nashornJs">
        <![CDATA[
        @add.where.js.function
        function operatorType(value) {
            if(value.indexOf("*")!=-1 ) {
                return " LIKE ";
            } else {
                return " = ";
            }
        }
        var log = mc.getServiceLog();
        var where = " WHERE catalogType.valid=1 ";
        var innerJoin = "";
        where += addWhere("id","Integer","catalogType","id");
        where += addWhere("code","String","catalogType","code");
        where += addWhere("name","String","catalogType","name");
        where += addWhere("sortType","String","catalogType","sort_type");
        where += addWhere("editable","Integer","catalogType","editable");
        where += addWhere("valid","Integer","catalogType","valid");
        where += addWhere("description","String","catalogType","description");
        mc.setProperty("uri.var.whereclause",where);
        mc.setProperty("uri.var.innerjoinclause",innerJoin);

        if(!mc.getProperty("uri.var.orderby")){
            mc.setProperty("uri.var.orderby","catalogType.id");
        } else {
            mc.setProperty("uri.var.orderby","catalogType."+mc.getProperty("uri.var.orderby"));
        }

        // FROM TO
        var fromto = "OFFSET "+mc.getProperty("uri.var.from")+" ROWS FETCH NEXT "+mc.getProperty("uri.var.to")+" ROWS ONLY";
        mc.setProperty("uri.var.fromto",fromto);
        log.debug(where);]]>
    </script>
    <log level="custom">
        <property name="CatalogTypeFromToSeq" value="Inicio.2." />
    </log>
    <call>
        <endpoint name="CatalogTypeDSS_Endpoint" template="HTTPEndpointGetTemplate" uri="{uri.var.dataServiceHost}/common.catalog-type.ds.HTTPEndpoint/GetFromToCatalogType?whereclause={uri.var.whereclause}&amp;orderby={uri.var.orderby}&amp;fromto={uri.var.fromto}&amp;innerjoinclause={uri.var.innerjoinclause}" />
    </call>
    <property expression="json-eval($.Fault.faultcode)" name="faultCode" scope="default" type="STRING" />
    <filter regex="true" source="boolean(get-property('faultCode'))">
        <then>
            <sequence key="FaultSeq" />
        </then>
        <else>
            <log level="custom">
                <property name="CatalogTypeFromToSeq" value="Inicio.4." />
            </log>
            <xslt key="gov:/centra-id/xslt/dssFilter.xsl" />
            <log level="custom">
                <property name="CatalogTypeFromToSeq" value="Inicio.5." />
            </log>
            <property name="messageType" scope="axis2" type="STRING" value="application/json" />
            <property name="HTTP_SC" scope="axis2" type="STRING" value="200" />
        </else>
    </filter>
    <log level="custom" category="DEBUG">
        <property name="CatalogTypeFromToSeq" value="Fin.." />
    </log>
</sequence>