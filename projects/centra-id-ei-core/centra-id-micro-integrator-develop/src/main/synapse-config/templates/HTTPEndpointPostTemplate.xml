<?xml version="1.0" encoding="UTF-8"?>
<template name="HTTPEndpointPostTemplate" xmlns="http://ws.apache.org/ns/synapse">
    <endpoint name="$name">
        <http method="post" uri-template="$uri">
            <suspendOnFailure>
                <errorCodes>10001,10002</errorCodes>
                <progressionFactor>1.0</progressionFactor>
            </suspendOnFailure>
        </http>
    </endpoint>
</template>
