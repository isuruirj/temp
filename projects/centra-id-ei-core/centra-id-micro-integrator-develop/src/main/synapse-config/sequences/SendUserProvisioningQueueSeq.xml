<?xml version="1.0" encoding="UTF-8"?>
<sequence name="SendUserProvisioningQueueSeq" onError="FaultSeq" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <property name="uir.var.guid" expression="XXXXXX" />
    <property action="remove" name="REST_URL_POSTFIX" scope="axis2" />
    <call>
        <endpoint template="HTTPEndpointGetTemplate" uri="{uri.var.enterpriseIntegratorHost}/api.centraid/provisioning/TransactionalIdentity?guid={uri.var.guid}" />
    </call>
    <filter regex="200" source="get-property('axis2', 'HTTP_SC')">
        <then>
            <iterate attachPath="//transactionalIdentityList" expression="//transactionalIdentity" preservePayload="true" sequential="true">
                <target>
                    <sequence>
                        <switch source="//typeAction">
                            <case regex="C"></case>
                            <case regex="U"></case>
                            <case regex="D"></case>
                            <default>
                                <property name="fault" value="Type of action not recognized" />
                                <sequence key="FaultSeq" />
                            </default>
                        </switch>
                    </sequence>
                </target>
            </iterate>
            <property name="data" scope="default">
                <data />
            </property>
            <aggregate>
                <completeCondition>
                    <messageCount min="-1" max="-1" />
                </completeCondition>
                <onComplete expression="$body/*[1]" enclosingElementProperty="data">
                    <log level="custom" category="DEBUG">
                        <property name="agregado" value="ok" />
                    </log>
                </onComplete>
            </aggregate>
        </then>
        <else>
            <property name="fault" value="error when consulting transactional identity by guid " />
            <sequence key="FaultSeq" />
        </else>
    </filter>
</sequence>