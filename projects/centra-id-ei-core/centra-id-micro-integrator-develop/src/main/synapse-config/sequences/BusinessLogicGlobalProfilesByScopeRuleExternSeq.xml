<?xml version="1.0" encoding="UTF-8"?>
<sequence name="BusinessLogicGlobalProfilesByScopeRuleExternSeq" onError="FaultSeq" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <property expression="$ctx:query.param.company" name="company" scope="default" type="STRING" />
    <property expression="$ctx:query.param.division" name="division" scope="default" type="STRING" />
    <property expression="$ctx:query.param.position" name="position" scope="default" type="STRING" />
    <log level="custom" category="DEBUG">
        <property name="BusinessLogicGlobalProfilesByScopeRuleExternSeq" value="Inicio..." />
        <property expression="$ctx:company" name="company" scope="default" type="STRING" />
        <property expression="$ctx:division" name="division" scope="default" type="STRING" />
        <property expression="$ctx:position" name="position" scope="default" type="STRING" />
    </log>
    <filter regex="true" source="boolean($ctx:company) and boolean($ctx:division) and boolean($ctx:position)">
        <then>
            <property name="type" value="EXTERN" />
            <sequence key="CalculateScopeRuleThatSeq" />
        </then>
        <else>
            <property name="whereRule" value=" AND a.CODE_COMPANY='XXXX'" />
        </else>
    </filter>
    <script language="js">
        <![CDATA[
            var name = eval(mc.getProperty("name"));
            var whereRule = eval(mc.getProperty("whereRule"));
            var whereclause = " AND  1=1 " + whereRule;
            mc.setProperty('uri.var.whereclause',eval(whereclause).toString());
        ]]>
    </script>
    <property action="remove" name="REST_URL_POSTFIX" scope="axis2" />
    <property action="remove" name="Content-Type" scope="transport" />
    <call>
        <endpoint template="HTTPEndpointGetTemplate" uri="{uri.var.dataServiceHost}/GlobalProfilesDSS.HTTPEndpoint/GetGlobalProfilesByScopeRule?whereclause={uri.var.whereclause}" />
    </call>
    <property name="messageType" scope="axis2" type="STRING" value="application/xml" />
    <property name="Accept" scope="transport" type="STRING" value="application/xml" />
    <filter regex="true" source="boolean(get-property('faultCode'))">
        <then>
            <sequence key="FaultSeq" />
        </then>
        <else>
            <!--xslt key="gov:/centra-id/xslt/dssFilter.xsl" /-->
            <property name="messageType" scope="axis2" type="STRING" value="application/json" />
            <property name="HTTP_SC" scope="axis2" type="STRING" value="200" />
        </else>
    </filter>
    <log level="custom" category="DEBUG">
        <property name="BusinessLogicGlobalProfilesByScopeRuleSeq" value="Fin..." />
    </log>
</sequence>