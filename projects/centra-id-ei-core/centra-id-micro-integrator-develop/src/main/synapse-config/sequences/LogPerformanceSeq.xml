<?xml version="1.0" encoding="UTF-8"?>
<sequence name="LogPerformanceSeq" onError="FaultSeq" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <property name="ContentType" value="application/xml" scope="axis2" />
    <property name="messageType" scope="axis2" type="STRING" value="application/xml" />
    <property action="remove" name="REST_URL_POSTFIX" scope="axis2" />
    <header name="Action" scope="default" value="urn:_postcreatelogperformance" />
    <payloadFactory media-type="xml">
        <format>
            <cen:_postcreatelogperformance xmlns:cen="centra-id.com">
                <cen:guid>$1</cen:guid>
                <cen:requestDate>$2</cen:requestDate>
                <cen:responseDate>$3</cen:responseDate>
                <cen:appCalled>$4</cen:appCalled>
                <cen:actionCalled>$5</cen:actionCalled>
            </cen:_postcreatelogperformance>
        </format>
        <args>
            <arg evaluator="xml" expression="get-property('guidCalled')" />
            <arg evaluator="xml" expression="get-property('requestDate')" />
            <arg evaluator="xml" expression="get-property('responseDate')" />
            <arg evaluator="xml" expression="get-property('appCalled')" />
            <arg evaluator="xml" expression="get-property('actionCalled')" />
        </args>
    </payloadFactory>
    <call>
        <endpoint template="HTTPEndpointPostTemplate" uri="{uri.var.dataServiceHost}/LogPerformanceDSS.HTTPEndpoint/createLogPerformance" />
    </call>
</sequence>