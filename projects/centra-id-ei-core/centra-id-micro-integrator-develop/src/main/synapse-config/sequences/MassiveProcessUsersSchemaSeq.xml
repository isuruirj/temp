<?xml version="1.0" encoding="UTF-8"?>
<sequence name="MassiveProcessUsersSchemaSeq" onError="FaultMassiveProcessUsersSeq" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <log level="custom" category="DEBUG">
        <property name="MassiveProcessUsersSchemaSeq" value="Inicio..." />
    </log>
    <!-- Validar mensaje json usando json schema -->
    <validate cache-schema="false">
        <schema key="gov:/centra-id/schemas/ProcesarEmpleadoRequestSchema.json" />
        <on-fail>
            <property expression="$ctx:ERROR_MESSAGE" name="observations" scope="default" type="STRING" />
            <sequence key="FaultMassiveProcessUsersSeq" />
        </on-fail>
    </validate>
    <log level="custom" category="DEBUG">
        <property name="MassiveProcessUsersSchemaSeq" value="Fin..." />
    </log>
</sequence>