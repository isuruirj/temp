<?xml version="1.0" encoding="UTF-8"?>
<sequence name="DefaultProfileSimpleListSeq" onError="FaultSeq" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <log level="custom" category="DEBUG">
        <property name="DefaultProfileSimpleListSeq" value="Inicio.." />
    </log>
    <property action="remove" name="REST_URL_POSTFIX" scope="axis2" />
    <property name="messageType" scope="axis2" type="STRING" value="application/xml" />
    <property name="Accept" scope="transport" type="STRING" value="application/xml" />
    <property action="remove" name="Content-Type" scope="transport" />
    <property expression="$ctx:query.param.orderby" name="uri.var.orderby" scope="default" type="STRING" />
    <property expression="$ctx:query.param.id" name="id" scope="default" type="STRING" />
    <property expression="$ctx:query.param.codeCompany" name="codeCompany" scope="default" type="STRING" />
    <property expression="$ctx:query.param.codeDivision" name="codeDivision" scope="default" type="STRING" />
    <property expression="$ctx:query.param.codeArea" name="codeArea" scope="default" type="STRING" />
    <property expression="$ctx:query.param.codeDepartment" name="codeDepartment" scope="default" type="STRING" />
    <property expression="$ctx:query.param.codePosition" name="codePosition" scope="default" type="STRING" />
    <property expression="$ctx:query.param.valid" name="valid" scope="default" type="STRING" />
    <property expression="$ctx:query.param.globalProfileId" name="globalProfileId" scope="default" type="STRING" />
    <script language="nashornJs"><![CDATA[
        @add.where.js.function
        function operatorType(value) {
            if(value.indexOf("*")!=-1 ) {
                return " LIKE ";
            } else {
                return " = ";
            }
        }
        var log = mc.getServiceLog();
        var where = " WHERE defaultProfileSimple.valid=1 ";
        var innerJoin = "";
        where += addWhere("id","Integer","defaultProfileSimple","id");
        where += addWhere("codeCompany","String","defaultProfileSimple","code_company");
        where += addWhere("codeDivision","String","defaultProfileSimple","code_division");
        where += addWhere("codeArea","String","defaultProfileSimple","code_area");
        where += addWhere("codeDepartment","String","defaultProfileSimple","code_department");
        where += addWhere("codePosition","String","defaultProfileSimple","code_position");
        where += addWhere("valid","Integer","defaultProfileSimple","valid");
        where += addWhere("globalProfileId","Integer","defaultProfileSimple","global_profile_id");
        mc.setProperty("uri.var.whereclause",where);
        mc.setProperty("uri.var.innerjoinclause",innerJoin);
        if(!mc.getProperty("uri.var.orderby")){
            mc.setProperty("uri.var.orderby","defaultProfileSimple.id");
        } else {
            mc.setProperty("uri.var.orderby","defaultProfileSimple."+mc.getProperty("uri.var.orderby"));
        }
        log.debug(where);]]></script>
    <call>
        <endpoint name="DefaultProfileSimpleDSS_Endpoint" template="HTTPEndpointGetTemplate"
              uri="{uri.var.dataServiceHost}/application.default-profile-simple.ds.HTTPEndpoint/GetAllDefaultProfileSimple?whereclause={uri.var.whereclause}&amp;orderby={uri.var.orderby}&amp;innerjoinclause={uri.var.innerjoinclause}" />

    </call>
    <property expression="json-eval($.Fault.faultcode)" name="faultCode" scope="default" type="STRING" />
    <filter regex="true" source="boolean(get-property('faultCode'))">
        <then>
            <sequence key="FaultSeq" />
        </then>
        <else>
            <xslt key="gov:/centra-id/xslt/dssFilter.xsl" />
            <property name="messageType" scope="axis2" type="STRING" value="application/json"/>
            <property name="HTTP_SC" scope="axis2" type="STRING" value="200" />
        </else>
    </filter>
    <log level="custom" category="DEBUG">
        <property name="DefaultProfileSimpleSeq" value="Fin.." />
    </log>
    <property name="messageType" value="application/json" scope="axis2" type="STRING"/>
    <property name="Access-Control-Allow-Methods" value="GET,PUT,POST,DELETE,PATCH,OPTIONS" scope="transport" type="STRING"/>
    <property name="Access-Control-Allow-Headers" value="Authorization,Access-Control-Allow-Origin,Content-Type" scope="transport" type="STRING"/>
</sequence>
