<?xml version="1.0" encoding="UTF-8"?>
<sequence name="ApplicationSimpleMaxSeq" onError="FaultSeq" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <log level="custom" category="DEBUG">
        <property name="ApplicationSimpleMaxSeq" value="Inicio.." />
        <property name="uri.var.field" expression="get-property('uri.var.field')"/>
    </log>
    <property action="remove" name="REST_URL_POSTFIX" scope="axis2" />
    <property name="messageType" scope="axis2" type="STRING" value="application/json" />
    <property name="Accept" scope="transport" type="STRING" value="application/json" />
    <property action="remove" name="Content-Type" scope="transport" />
    <property expression="$ctx:query.param.id" name="id" scope="default" type="STRING" />
    <property expression="$ctx:query.param.code" name="code" scope="default" type="STRING" />
    <property expression="$ctx:query.param.name" name="name" scope="default" type="STRING" />
    <property expression="$ctx:query.param.automaticProvision" name="automaticProvision" scope="default" type="STRING" />
    <property expression="$ctx:query.param.status" name="status" scope="default" type="STRING" />
    <property expression="$ctx:query.param.valid" name="valid" scope="default" type="STRING" />
    <property expression="$ctx:query.param.applicationGroupId" name="applicationGroupId" scope="default" type="STRING" />
    <property expression="$ctx:query.param.parentId" name="parentId" scope="default" type="STRING" />
    <script language="nashornJs"><![CDATA[
        @add.where.js.function
        function operatorType(value) {
            if(value.indexOf("*")!=-1 ) {
                return " LIKE ";
            } else {
                return " = ";
            }
        }
        var log = mc.getServiceLog();
        var where = " WHERE applicationSimple.valid=1 ";
        var innerJoin = "";
        where += addWhere("id","Integer","applicationSimple","id");
        where += addWhere("code","String","applicationSimple","code");
        where += addWhere("name","String","applicationSimple","name");
        where += addWhere("automaticProvision","Integer","applicationSimple","automatic_provision");
        where += addWhere("status","String","applicationSimple","status");
        where += addWhere("valid","Integer","applicationSimple","valid");
        where += addWhere("applicationGroupId","Integer","applicationSimple","application_group_id");
        where += addWhere("parentId","Integer","applicationSimple","parent_id");
        mc.setProperty("uri.var.whereclause",where);
        mc.setProperty("uri.var.innerjoinclause",innerJoin);

        // FIELD
        var field = "applicationSimple."+mc.getProperty("uri.var.field");
        mc.setProperty("uri.var.field",field);

        log.debug(where);]]></script>

    <property value="sch_centra_id.APPLICATIONS applicationSimple" name="uri.var.table" scope="default" type="STRING"/>
    <property value="MAX" name="uri.var.function" scope="default" type="STRING"/>

    <call>
        <endpoint name="ApplicationSimpleDSS_Endpoint" template="HTTPEndpointGetTemplate"
              uri="{uri.var.dataServiceHost}/application.application-simple.ds.HTTPEndpoint/GetFunctionResultApplicationSimple?function={uri.var.function}&amp;whereclause={uri.var.whereclause}&amp;field={uri.var.field}&amp;table={uri.var.table}&amp;innerjoinclause={uri.var.innerjoinclause}" />

    </call>

    <property expression="json-eval($.Fault.faultcode)" name="faultCode" scope="default" type="STRING"/>
    <filter regex="true" source="boolean(get-property('faultCode'))">
        <then>
            <sequence key="FaultSeq"/>
        </then>
        <else>
            <payloadFactory media-type="json">
                <format>
                    {
                        "max": $1
                    }
                </format>
                <args>
                    <arg evaluator="json" expression="$.result.value"/>
                </args>
            </payloadFactory>
            <property name="HTTP_SC" scope="axis2" type="STRING" value="200"/>
        </else>
    </filter>
    <log level="custom" category="DEBUG">
        <property name="ApplicationSimpleMaxSeq" value="Fin.." />
    </log>
    <respond />
</sequence>
