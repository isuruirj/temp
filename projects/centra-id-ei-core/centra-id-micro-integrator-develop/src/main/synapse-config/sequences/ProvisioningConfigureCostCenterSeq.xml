<?xml version="1.0" encoding="UTF-8"?>
<sequence name="ProvisioningConfigureCostCenterSeq" onError="FaultSeq" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <log level="custom" category="DEBUG">
        <property name="ProvisioningConfigureCostCenterSeq" value="Inicio.." />
    </log>
    <property name="uri.var.costCenterCode" expression="$ctx:operationProvisioning//operationProvisioningList/operationProvisioning/transactionalIdentity/costCenterCode/text()" />
    <call>
        <endpoint template="HTTPEndpointGetTemplate" uri="{uri.var.enterpriseIntegratorHost}/api.centraid/company/CostCenter?code={uri.var.costCenterCode}" />
    </call>
    <filter regex="200" source="get-property('axis2', 'HTTP_SC')">
        <then>
            <property name="costCenter" expression="$body//*" scope="default" type="OM" />
        </then>
        <else>
            <property name="fault" value="ProvisioningSeq: Error get CostCenter" />
            <sequence key="FaultSeq" />
        </else>
    </filter>
    <log level="custom" category="DEBUG">
        <property name="ProvisioningConfigureCostCenterSeq" value="Fin.." />
    </log>
</sequence>