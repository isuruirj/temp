<?xml version="1.0" encoding="UTF-8"?>
<sequence name="ResourceSynProfileSeq" onError="FaultSeq" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <property expression="$ctx:query.param.transactionalProfileId" name="uri.var.transactionalProfileId" scope="default" type="STRING" />
    <log level="custom" category="DEBUG">
        <property name="ResourceSynProfileSeq" value="Inicio.1." />
        <property name="uri.var.transactionalProfileId" expression="get-property('uri.var.transactionalProfileId')" scope="default" type="STRING" />
    </log>
    <property action="remove" name="REST_URL_POSTFIX" scope="axis2" />
    <call>
        <endpoint template="HTTPEndpointGetTemplate" uri="{uri.var.enterpriseIntegratorHost}/api.centraid/application/TransactionalProfile/{uri.var.transactionalProfileId}" />
    </call>
    <property name="messageType" value="application/xml" scope="axis2" />
    <filter regex="200" source="get-property('axis2', 'HTTP_SC')">
        <then>
            <property name="uri.var.applicationGroupId" expression="(//applicationGroup)[1]/id" scope="default" type="STRING" />
            <filter regex="true" source="boolean(get-property('uri.var.applicationGroupId'))">
                <then>
                    <sequence key="ResourceSynProfileFieldSeq" />
                    <sequence key="ResourceSynProfileMatrixSeq" />
                </then>
                <else>
                    <property name="fault" value="not exits applicationGroupId.. " />
                    <sequence key="FaultSeq" />
                </else>
            </filter>
            <property name="messageType" scope="axis2" type="STRING" value="application/json" />
            <property name="HTTP_SC" scope="axis2" type="STRING" value="200" />
            <property name="NO_ENTITY_BODY" value="true" scope="axis2" type="BOOLEAN" />
            <payloadFactory media-type="json">
                <format>
                    {
                        "result": "ok"
                    }
                </format>
                <args></args>
            </payloadFactory>
        </then>
        <else>
            <property name="fault" value="error when consulting transactional profile by id " />
            <sequence key="FaultSeq" />
        </else>
    </filter>
    <log level="custom" category="DEBUG">
        <property name="ResourceSynProfileSeq" value="Fin.." />
    </log>
</sequence>