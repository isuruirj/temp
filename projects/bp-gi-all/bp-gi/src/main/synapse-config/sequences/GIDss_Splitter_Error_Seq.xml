<?xml version="1.0" encoding="UTF-8"?>
<sequence name="GIDss_Splitter_Error_Seq" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
	<log level="simple" category="ERROR">
		<property name="LOG" value="Error in retry process. Reverting the Retry in progress status."/>
		<property name="ROW_GUID" expression="$ctx:ROW_GUID"/>
		<property name="ROW_VERSION" expression="$ctx:NEW_ROW_VERSION"/>
	</log>
	<payloadFactory media-type="xml">
		<format>
			<ds:Update_Retry_Status xmlns:ds="http://ws.wso2.org/dataservice">
	            <ds:retry_inprogress>0</ds:retry_inprogress>
	            <ds:GUID>$1</ds:GUID>
	            <ds:row_version>$2</ds:row_version>
	        </ds:Update_Retry_Status>
		</format>
		<args>
			<arg expression="$ctx:ROW_GUID"/>
			<arg expression="$ctx:NEW_ROW_VERSION"/>
		</args>
	</payloadFactory>
	<call>
        <endpoint key="GIDss_GIdentidades_EP"/>
    </call>
</sequence>
