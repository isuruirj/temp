<?xml version="1.0" encoding="UTF-8"?>
<endpoint name="GIMailbox_EP" xmlns="http://ws.apache.org/ns/synapse">
    <http uri-template="{uri.var.host}">
        <timeout>
            <duration>55000</duration>
            <responseAction>fault</responseAction>
        </timeout>
        <suspendOnFailure>
            <errorCodes>-1</errorCodes>
            <progressionFactor>1.0</progressionFactor>
        </suspendOnFailure>
        <markForSuspension>
            <errorCodes>-1</errorCodes>
        </markForSuspension>
    </http>
</endpoint>
