<?xml version="1.0" encoding="UTF-8"?>
<sequence name="GITareas_Seq" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <log description="seq" level="custom">
        <property name="seq" value="-------------------- GITareas_Seq --------------------"/>
        <property expression="get-property('ESTADO')" name="ESTADO"/>
        <property expression="get-property('REINTENTO')" name="REINTENTO"/>
    </log>
    <property description="uri.var.context" name="uri.var.context" scope="default" type="STRING" value="/api.centraid/businesslogic/"/>
    <property description="uri.var.host" expression="fn:concat(get-property('ENTERPRISE_INTEGRATOR_HOST'), get-property('uri.var.context'), get-property('uri.var.resourcepath'))" name="uri.var.host" scope="default" type="STRING" xmlns:ns="http://org.apache.synapse/xsd"/>
    <property description="HTTP_METHOD:POST" name="HTTP_METHOD" scope="axis2" type="STRING" value="POST"/>
    <log description="URL" level="custom">
        <property name="seq" value="-------------------- GITareas_Seq --------------------"/>
        <property expression="get-property('uri.var.host')" name="URL"/>
        <property expression="$body" name="body"/>
    </log>
    <call>
        <endpoint key="GITareas_EP"/>
    </call>
    <log description="Response Tareas" level="custom">
        <property expression="json-eval($.)" name="responseTareas"/>
    </log>
</sequence>
