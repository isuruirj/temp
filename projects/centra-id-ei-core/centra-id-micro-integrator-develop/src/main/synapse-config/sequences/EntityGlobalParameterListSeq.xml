<?xml version="1.0" encoding="UTF-8"?>
<sequence name="GlobalParameterListSeq" onError="FaultSeq" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <log level="custom" category="DEBUG">
        <property name="GlobalParameterListSeq" value="Inicio.." />
    </log>
    <property action="remove" name="REST_URL_POSTFIX" scope="axis2" />
    <property name="messageType" scope="axis2" type="STRING" value="application/xml" />
    <property name="Accept" scope="transport" type="STRING" value="application/xml" />
    <property action="remove" name="Content-Type" scope="transport" />
    <property expression="$ctx:query.param.orderby" name="uri.var.orderby" scope="default" type="STRING" />
    <property expression="$ctx:query.param.id" name="id" scope="default" type="STRING" />
    <property expression="$ctx:query.param.code" name="code" scope="default" type="STRING" />
    <property expression="$ctx:query.param.name" name="name" scope="default" type="STRING" />
    <property expression="$ctx:query.param.description" name="description" scope="default" type="STRING" />
    <property expression="$ctx:query.param.type" name="type" scope="default" type="STRING" />
    <property expression="$ctx:query.param.valueText" name="valueText" scope="default" type="STRING" />
    <property expression="$ctx:query.param.valueNumber" name="valueNumber" scope="default" type="STRING" />
    <property expression="$ctx:query.param.valueDate" name="valueDate" scope="default" type="STRING" />
    <property expression="$ctx:query.param.valueBoolean" name="valueBoolean" scope="default" type="STRING" />
    <property expression="$ctx:query.param.filter" name="filter" scope="default" type="STRING" />
    <property expression="$ctx:query.param.valid" name="valid" scope="default" type="STRING" />
    <script language="nashornJs"><![CDATA[
        @add.where.js.function
        function operatorType(value) {
            if(value.indexOf("*")!=-1 ) {
                return " LIKE ";
            } else {
                return " = ";
            }
        }
        var log = mc.getServiceLog();
        var where = " WHERE globalParameter.valid=1 ";
        var innerJoin = "";
        where += addWhere("id","Integer","globalParameter","id");
        where += addWhere("code","String","globalParameter","code");
        where += addWhere("name","String","globalParameter","name");
        where += addWhere("description","String","globalParameter","description");
        where += addWhere("type","String","globalParameter","type");
        where += addWhere("valueText","String","globalParameter","value_text");
        where += addWhere("valueNumber","Numeric","globalParameter","value_number");
        where += addWhere("valueDate","Date","globalParameter","value_date");
        where += addWhere("valueBoolean","Boolean","globalParameter","value_boolean");
        where += addWhere("filter","String","globalParameter","filter");
        where += addWhere("valid","Integer","globalParameter","valid");
        mc.setProperty("uri.var.whereclause",where);
        mc.setProperty("uri.var.innerjoinclause",innerJoin);
        if(!mc.getProperty("uri.var.orderby")){
            mc.setProperty("uri.var.orderby","globalParameter.id");
        } else {
            mc.setProperty("uri.var.orderby","globalParameter."+mc.getProperty("uri.var.orderby"));
        }
        log.debug(where);]]></script>
    <call>
        <endpoint name="GlobalParameterDSS_Endpoint" template="HTTPEndpointGetTemplate"
              uri="{uri.var.dataServiceHost}/common.global-parameter.ds.HTTPEndpoint/GetAllGlobalParameter?whereclause={uri.var.whereclause}&amp;orderby={uri.var.orderby}&amp;innerjoinclause={uri.var.innerjoinclause}" />

    </call>
    <property expression="json-eval($.Fault.faultcode)" name="faultCode" scope="default" type="STRING" />
    <filter regex="true" source="boolean(get-property('faultCode'))">
        <then>
            <sequence key="FaultSeq" />
        </then>
        <else>
            <xslt key="gov:/centra-id/xslt/dssFilter.xsl" />
            <property name="messageType" scope="axis2" type="STRING" value="application/json"/>
            <property name="HTTP_SC" scope="axis2" type="STRING" value="200" />
        </else>
    </filter>
    <log level="custom" category="DEBUG">
        <property name="GlobalParameterSeq" value="Fin.." />
    </log>
    <property name="messageType" value="application/json" scope="axis2" type="STRING"/>
    <property name="Access-Control-Allow-Methods" value="GET,PUT,POST,DELETE,PATCH,OPTIONS" scope="transport" type="STRING"/>
    <property name="Access-Control-Allow-Headers" value="Authorization,Access-Control-Allow-Origin,Content-Type" scope="transport" type="STRING"/>
</sequence>
