<?xml version="1.0" encoding="UTF-8"?>
<sequence name="BusinessLogicTaskProvisioningErrorWithoutTicketSeq" onError="FaultSeq" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <log level="custom" category="DEBUG">
        <property name="BusinessLogicTaskProvisioningErrorWithoutTicketSeq" value="Inicio..." />
    </log>
    <property name="Content-Encoding" action="remove" scope="transport" />
    <property name="Accept-Encoding" action="remove" scope="transport" />
    <property name="messageType" scope="axis2" type="STRING" value="application/json" />
    <property name="uri.var.uuid" expression="//uuid" />
    <property name="error" expression="//error" />
    <log level="custom" category="DEBUG">
        <property name="BusinessLogicTaskProvisioningErrorWithoutTicketSeq" value="Inicio.1.." />
        <property name="error" expression="$ctx:error" />
    </log>
    <call>
        <endpoint template="HTTPEndpointGetTemplate" uri="{uri.var.enterpriseIntegratorHost}/api.centraid/provisioning/TaskProvisioning?uuid={uri.var.uuid}" />
    </call>
    <filter regex="200" source="get-property('axis2', 'HTTP_SC')">
        <then>
            <property name="uri.var.taskProvisioningId" expression="//taskProvisioningList/taskProvisioning/id" />
            <filter regex="true" source="boolean(get-property('uri.var.taskProvisioningId'))">
                <then>
                    <property name="uuidParent" expression="//taskProvisioningList/taskProvisioning/uuidParent/text()" />
                    <filter regex="true" source="boolean(get-property('uuidParent'))">
                        <then>
                            <payloadFactory media-type="json">
                                <format>
                                    {
                                        "taskProvisioning": {
                                            "id" :$1,
                                            "transactionalProfile": {
                                                "id": $2
                                            },
                                            "application" :{
                                                "id": $3
                                            },
                                            "operationProvisioning" :{
                                                "id": $4
                                            },
                                            "provisioningDate" : "$5",
                                            "provisioningStatus" : "PENDIENTE",
                                            "provisioningComments": "$6",
                                            "creationDate": "$7",
                                            "uuid":"$8",
                                            "uuidParent": "$9",
                                            "action": "$10",        
                                            "status": "ERROR",
                                            "ticketNumber": "",                                    
                                            "ticketDate": null,
                                            "ticketContent": "",
                                            "ticketError": "$11",        
                                            "retryLastDate": null,        
                                            "retryNumber": null,
                                            "type" : "$12"      
                                        }
                                    }                    
                                </format>
                                <args>
                                    <arg evaluator="xml" expression="get-property('uri.var.taskProvisioningId')" />
                                    <arg evaluator="xml" expression="//taskProvisioningList/taskProvisioning/transactionalProfile/id" />
                                    <arg evaluator="xml" expression="//taskProvisioningList/taskProvisioning/application/id" />
                                    <arg evaluator="xml" expression="//taskProvisioningList/taskProvisioning/operationProvisioning/id" />
                                    <arg evaluator="xml" expression="get-property('provisioningDate')" />
                                    <arg evaluator="xml" expression="get-property('provisioningComment')" />
                                    <arg evaluator="xml" expression="get-property('requestDate')" />
                                    <arg evaluator="xml" expression="//taskProvisioningList/taskProvisioning/uuid" />
                                    <arg evaluator="xml" expression="//taskProvisioningList/taskProvisioning/uuidParent" />
                                    <arg evaluator="xml" expression="//taskProvisioningList/taskProvisioning/action" />
                                    <arg evaluator="xml" expression="$ctx:error" />
                                    <arg evaluator="xml" expression="//taskProvisioningList/taskProvisioning/type" />
                                </args>
                            </payloadFactory>
                        </then>
                        <else>
                            <payloadFactory media-type="json">
                                <format>
                                    {
                                        "taskProvisioning": {
                                            "id" :$1,
                                            "transactionalProfile": {
                                                "id": $2
                                            },
                                            "application" :{
                                                "id": $3
                                            },
                                            "operationProvisioning" :{
                                                "id": $4
                                            },
                                            "provisioningDate" : "$5",
                                            "provisioningStatus" : "PENDIENTE",
                                            "provisioningComments": "$6",
                                            "creationDate": "$7",
                                            "uuid":"$8",
                                            "uuidParent": null,
                                            "action": "$9",        
                                            "status": "ERROR",
                                            "ticketNumber": "",                                    
                                            "ticketDate": null,
                                            "ticketContent": "",
                                            "ticketError": "$10" ,
                                            "retryLastDate": null,        
                                            "retryNumber": null,
                                            "type" : "$12"       
                                        }
                                    }                    
                                </format>
                                <args>
                                    <arg evaluator="xml" expression="get-property('uri.var.taskProvisioningId')" />
                                    <arg evaluator="xml" expression="//taskProvisioningList/taskProvisioning/transactionalProfile/id" />
                                    <arg evaluator="xml" expression="//taskProvisioningList/taskProvisioning/application/id" />
                                    <arg evaluator="xml" expression="//taskProvisioningList/taskProvisioning/operationProvisioning/id" />
                                    <arg evaluator="xml" expression="get-property('provisioningDate')" />
                                    <arg evaluator="xml" expression="get-property('provisioningComment')" />
                                    <arg evaluator="xml" expression="get-property('requestDate')" />
                                    <arg evaluator="xml" expression="//taskProvisioningList/taskProvisioning/uuid" />
                                    <arg evaluator="xml" expression="//taskProvisioningList/taskProvisioning/action" />
                                    <arg evaluator="xml" expression="$ctx:error" />
                                    <arg evaluator="xml" expression="//taskProvisioningList/taskProvisioning/type" />
                                </args>
                            </payloadFactory>
                        </else>
                    </filter>
                    <call>
                        <endpoint template="HTTPEndpointPutTemplate" uri="{uri.var.enterpriseIntegratorHost}/api.centraid/provisioning/TaskProvisioning/{uri.var.taskProvisioningId}" />
                    </call>
                    <filter regex="202" source="get-property('axis2', 'HTTP_SC')">
                        <then>
                            <log level="custom" category="DEBUG">
                                <property name="BusinessLogicTaskProvisioningOkSeq" value="Inicio.6." />
                            </log>
                            <payloadFactory media-type="json">
                                <format>
                                    {
                                        "taskProvisioningHistory": {
                                            "taskProvisioningId":  $1,
                                            "creationDate": "$2",
                                            "status": "ERROR",
                                            "retryNumber": null,
                                            "retryDate": null                                                                        
                                        }
                                    }
                                </format>
                                <args>
                                    <arg evaluator="xml" expression="//taskProvisioning/id" />
                                    <arg evaluator="xml" expression="get-property('requestDate')" />
                                </args>
                            </payloadFactory>
                            <call>
                                <endpoint template="HTTPEndpointPostTemplate" uri="{uri.var.enterpriseIntegratorHost}/api.centraid/provisioning/TaskProvisioningHistory" />
                            </call>
                            <property name="messageType" scope="axis2" type="STRING" value="application/json" />
                            <property name="HTTP_SC" scope="axis2" type="STRING" value="200" />
                            <payloadFactory media-type="json">
                                <format>
                                    {
                                        "result": "true",
                                        "message" : "ok"
                                    }
                                </format>
                                <args />
                            </payloadFactory>
                        </then>
                        <else>
                            <property name="fault" value="Error TaskProvisioning update" />
                            <sequence key="FaultSeq" />
                        </else>
                    </filter>
                </then>
                <else>
                    <payloadFactory media-type="json">
                        <format>
                            {
                                "result": "false",
                                "message" : "There is no task with the uuid sent"
                            }
                        </format>
                        <args />
                    </payloadFactory>
                    <property name="HTTP_SC" scope="axis2" type="STRING" value="200" />
                </else>
            </filter>
        </then>
        <else>
            <property name="fault" value="Error when consulting TaskProvisioning by uuid " />
            <sequence key="FaultSeq" />
        </else>
    </filter>
    <log level="custom" category="DEBUG">
        <property name="BusinessLogicTaskProvisioningErrorWithoutTicketSeq" value="Fin..." />
    </log>
</sequence>