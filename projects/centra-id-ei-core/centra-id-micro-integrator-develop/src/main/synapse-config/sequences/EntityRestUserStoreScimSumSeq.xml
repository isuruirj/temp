    <call>
        <endpoint name="RestUserStoreScimDSS_Endpoint" template="HTTPEndpointGetTemplate"
              uri="{uri.var.dataServiceHost}/provisioning.rest-user-store-scim.ds.HTTPEndpoint/GetFunctionResultRestUserStoreScim?function={uri.var.function}&amp;whereclause={uri.var.whereclause}&amp;field={uri.var.field}&amp;table={uri.var.table}&amp;innerjoinclause={uri.var.innerjoinclause}" />

