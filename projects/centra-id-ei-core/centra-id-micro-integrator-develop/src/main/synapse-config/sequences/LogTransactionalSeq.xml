<?xml version="1.0" encoding="UTF-8"?>
<sequence name="LogTransactionalSeq" onError="FaultSeq" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <property name="messageType" scope="axis2" type="STRING" value="application/xml" />
    <property name="Accept" scope="transport" type="STRING" value="application/xml" />
    <property action="remove" name="REST_URL_POSTFIX" scope="axis2" />
    <xslt key="gov:/centra-id/xslt/logTransactional.xsl">
        <property name="guid" expression="get-property('guidCalled')" />
        <property name="operarationTypeAccess" expression="get-property('operarationTypeAccess')" />
        <property name="appCalled" expression="get-property('appCalled')" />
        <property name="actionCalled" expression="get-property('actionCalled')" />
        <property name="requestDate" expression="get-property('requestDate')" />
        <property name="requestJson" expression="base64Encode(get-property('requestJson'))" />
        <property name="responseJson" expression="base64Encode(get-property('responseJson'))" />
        <property name="userId" expression="get-property('transport','UserName')" />
    </xslt>
    <call>
        <endpoint template="HTTPEndpointPostTemplate" uri="{uri.var.dataServiceHost}/LogTransactionalDSS.HTTPEndpoint/createLogTransactional" />
    </call>
</sequence>