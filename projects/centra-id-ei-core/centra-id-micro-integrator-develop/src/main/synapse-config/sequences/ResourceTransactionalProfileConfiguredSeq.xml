<?xml version="1.0" encoding="UTF-8"?>
<sequence onError="FaultSeq" name="ResourceTransactionalProfileConfiguredSeq" xmlns="http://ws.apache.org/ns/synapse">
    <log level="custom" category="INFO">
        <property name="ResourceTransactionalProfileConfiguredSeq" value="Inicio..." />
    </log>
    <property name="uri.var.transactionalProfileId" expression="$ctx:query.param.transactionalProfileId" scope="default" type="STRING" />
    <property action="remove" name="REST_URL_POSTFIX" scope="axis2" />
    <call>
        <endpoint template="HTTPEndpointGetTemplate" uri="{uri.var.enterpriseIntegratorHost}/api.centraid/application/TemplateProfile?transactionalProfile.id={uri.var.transactionalProfileId}" />
    </call>
    <property name="hasConfigured" value="0" type="INTEGER" scope="default" />
    <filter regex="200" source="get-property('axis2', 'HTTP_SC')">
        <then>
            <filter regex="true" source="boolean(//jsonObject/templateProfileList/templateProfile/fieldValue[string-length(text()) > 0] )">
                <then>
                    <property name="hasConfigured" value="1" type="INTEGER" scope="default" />
                </then>
            </filter>
        </then>
        <else>
            <property name="fault" value="Error retrive TemplateProfile by transactionalProfileId  " />
            <sequence key="FaultSeq" />
        </else>
    </filter>
    <filter regex="true" source="get-property('hasConfigured')=0">
        <then>
            <property action="remove" name="REST_URL_POSTFIX" scope="axis2" />
            <call>
                <endpoint template="HTTPEndpointGetTemplate" uri="{uri.var.enterpriseIntegratorHost}/api.centraid/application/TemplateProfileMatrixDetail?templateProfileMatrixGroup.templateProfileMatrix.transactionalProfile.id={uri.var.transactionalProfileId}" />
            </call>
            <filter regex="200" source="get-property('axis2', 'HTTP_SC')">
                <then>
                    <filter regex="true" source="boolean(//jsonObject/templateProfileMatrixDetailList/templateProfileMatrixDetail/value[string-length(text()) > 0] )">
                        <then>
                            <property name="hasConfigured" value="1" type="INTEGER" scope="default" />
                        </then>
                    </filter>
                </then>
                <else>
                    <property name="fault" value="Error retrive TemplateProfileMatrixDetail by transactionalProfileId  " />
                    <sequence key="FaultSeq" />
                </else>
            </filter>
        </then>
    </filter>
    <property action="remove" name="REST_URL_POSTFIX" scope="axis2" />
    <call>
        <endpoint template="HTTPEndpointGetTemplate" uri="{uri.var.enterpriseIntegratorHost}/api.centraid/application/TransactionalProfile/{uri.var.transactionalProfileId}" />
    </call>
    <filter regex="200" source="get-property('axis2', 'HTTP_SC')">
        <then>
            <log level="custom" category="DEBUG">
                <property name="hasConfigured.2" expression="get-property('hasConfigured')" />
            </log>
            <payloadFactory media-type="json">
                <format>
                    {
                        "transactionalProfile": {
                            "id" : $1,
                            "code": "$2",
                            "name": "$3",
                            "comments": "$4",
                            "dateCreated": "$5",
                            "userCreated": "$6",
                            "dateDeleted" : null,
                            "userDeleted" : null,
                            "configured" : $7,
                            "catalogRiskLevel": {
                                "id": $8
                            },
                            "application": {
                                "id": $9
                            },
                            "filter" : "$10"
                        }
                    }                    
                </format>
                <args>
                    <arg evaluator="xml" expression="get-property('uri.var.transactionalProfileId')" />
                    <arg evaluator="xml" expression="//transactionalProfileList/transactionalProfile/code" />
                    <arg evaluator="xml" expression="//transactionalProfileList/transactionalProfile/name" />
                    <arg evaluator="xml" expression="//transactionalProfileList/transactionalProfile/comments/text()" />
                    <arg evaluator="xml" expression="//transactionalProfileList/transactionalProfile/dateCreated" />
                    <arg evaluator="xml" expression="//transactionalProfileList/transactionalProfile/userCreated" />
                    <arg evaluator="xml" expression="get-property('hasConfigured')" />
                    <arg evaluator="xml" expression="//transactionalProfileList/transactionalProfile/catalogRiskLevel/id" />
                    <arg evaluator="xml" expression="//transactionalProfileList/transactionalProfile/application/id" />
                    <arg evaluator="xml" expression="fn:concat(//transactionalProfileList/transactionalProfile/code,' ',//transactionalProfileList/transactionalProfile/name)" />
                </args>
            </payloadFactory>
            <call>
                <endpoint template="HTTPEndpointPutTemplate" uri="{uri.var.enterpriseIntegratorHost}/api.centraid/application/TransactionalProfile/{uri.var.transactionalProfileId}" />
            </call>
            <filter regex="202" source="get-property('axis2', 'HTTP_SC')">
                <then>
                    <payloadFactory media-type="json">
                        <format>
                            {
                                "ModifyTransactionalProfile": {
                                    "transactionalProfileId": $1
                                }
                            }                            
                        </format>
                        <args>
                            <arg evaluator="xml" expression="get-property('uri.var.transactionalProfileId')" />
                        </args>
                    </payloadFactory>
                    <log level="full" category="INFO">
                        <property name="ResourceTransactionalProfileConfiguredSeq" value="Inicio.1.." />
                    </log>
                    <property name="UserName" expression="$ctx:UserName" scope="transport" />
                    <call>
                        <endpoint template="HTTPEndpointPostTemplate" uri="{uri.var.enterpriseIntegratorHost}/api.centraid/businesslogic/ModifyTransactionalProfile" />
                    </call>
                    <log level="full" category="INFO">
                        <property name="ResourceTransactionalProfileConfiguredSeq" value="Inicio.2.." />
                    </log>
                    <property name="messageType" scope="axis2" type="STRING" value="application/json" />
                    <property name="HTTP_SC" scope="axis2" type="STRING" value="200" />
                    <property name="NO_ENTITY_BODY" value="true" scope="axis2" type="BOOLEAN" />
                    <payloadFactory media-type="json">
                        <format>
                            {
                              "result":  {
                                   "code" : 0,
                                   "message" : "Operation performed successfully"
                                }
                            }                        
                        </format>
                        <args />
                    </payloadFactory>
                </then>
                <else>
                    <property name="fault" value="Error put TransactionalProfileId  " />
                    <sequence key="FaultSeq" />
                </else>
            </filter>
        </then>
        <else>
            <property name="fault" value="Error retrive TransactionalProfile by id  " />
            <sequence key="FaultSeq" />
        </else>
    </filter>
    <log level="custom" category="DEBUG">
        <property name="ResourceTransactionalProfileConfiguredSeq" value="Fin..." />
    </log>
</sequence>