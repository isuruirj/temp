<?xml version="1.0" encoding="UTF-8"?>
<sequence name="FieldSimpleUpdateSeq" onError="FaultSeq" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <log category="DEBUG" level="custom">
        <property name="FieldSimpleUpdateSeq" value="Inicio.."/>
    </log>
    <property name="messageType" scope="axis2" type="STRING" value="application/xml"/>
    <property name="Accept" scope="transport" type="STRING" value="application/xml"/>
    <xslt key="gov:/centra-id/xslt/jsonFilter.xsl">
        <property name="operationName" value="update"/>
        <property name="entityName" value="fieldSimple"/>
        <property name="entityNamePlural" value="fields"/>
        <property expression="get-property('uri.var.id')" name="id" xmlns:axis2ns65="http://ws.wso2.org/dataservice" xmlns:ci="centra-id.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"/>
    </xslt>
    <call>
        <endpoint name="FieldSimpleDSS_Endpoint" template="HTTPEndpointPutTemplate" uri="{uri.var.dataServiceHost}/application.field-simple.ds.HTTPEndpoint/UpdateFieldSimple"/>
    </call>
    <property expression="//axis2ns65:DataServiceFault/axis2ns65:ds_code" name="faultCode" scope="default" type="STRING" xmlns:axis2ns65="http://ws.wso2.org/dataservice" xmlns:ci="centra-id.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"/>
    <filter regex="true" source="boolean(get-property('faultCode'))" xmlns:axis2ns65="http://ws.wso2.org/dataservice" xmlns:ci="centra-id.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
        <then>
            <sequence key="FaultSeq"/>
        </then>
        <else>
            <payloadFactory media-type="json">
                <format>{ "fieldSimple": { "id": $1 } }</format>
                <args>
                    <arg evaluator="xml" expression="get-property('uri.var.id')"/>
                </args>
            </payloadFactory>
            <property name="HTTP_SC" scope="axis2" type="STRING" value="200"/>
        </else>
    </filter>
    <log category="DEBUG" level="custom">
        <property name="FieldSimpleUpdateSeq" value="Fin.."/>
    </log>
</sequence>
