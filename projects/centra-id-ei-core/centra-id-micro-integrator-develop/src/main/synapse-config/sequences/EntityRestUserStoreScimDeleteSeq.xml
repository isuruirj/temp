<?xml version="1.0" encoding="UTF-8"?>
<sequence name="RestUserStoreScimDeleteSeq" onError="FaultSeq" trace="disable" xmlns="http://ws.apache.org/ns/synapse" xmlns:ci="centra-id.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:axis2ns65="http://ws.wso2.org/dataservice">
    <!-- MANUAL -->
    <log level="custom" category="DEBUG">
        <property name="RestUserStoreScimDeleteSeq" value="Inicio.." />
    </log>
    <property name="messageType" scope="axis2" type="STRING" value="application/xml" />
    <property name="Accept" scope="transport" type="STRING" value="application/xml" />
    <property name="Content-Type" scope="transport" value="application/x-www-form-urlencoded" />
    <property name="messageType" scope="axis2" type="STRING" value="application/x-www-form-urlencoded" />
    <!--payloadFactory media-type="xml">
        <format>
            <ci:_deletedeleterestUserStoreScim>
            <ci:table>$1</ci:table>
            <ci:set>$2</ci:set>
            <ci:id>$3</ci:id>
            </ci:_deletedeleterestUserStoreScim>
        </format>
        <args>
           <arg evaluator="xml" expression="get-property('uri.var.table')" />
           <arg evaluator="xml" expression="get-property('uri.var.set')" />
           <arg evaluator="xml" expression="get-property('uri.var.id')" />
        </args>
     </payloadFactory-->
    <call>
        <endpoint template="HTTPEndpointDeleteTemplate" uri="{uri.var.dataServiceHost}/provisioning.rest-user-store-scim.ds.HTTPEndpoint/DeleteRestUserStoreScim?username={uri.var.username}&amp;domain={uri.var.domain}" />
    </call>
    <property expression="//ci:Fault/ci:faultcode" name="faultCode" scope="default" type="STRING" />
    <filter regex="true" source="boolean(get-property('faultCode'))">
        <then>
            <sequence key="FaultSeq" />
        </then>
        <else>
            <payloadFactory media-type="json">
                <format>
                    { 
                        "restUserStoreScim": 
                        { 
                            "username": "$1",
                            "domain" : "$2"
                        } 
                    }
                </format>
                <args>
                    <arg evaluator="xml" expression="get-property('uri.var.username')" />
                    <arg evaluator="xml" expression="get-property('uri.var.domain')" />
                </args>
            </payloadFactory>
            <property name="HTTP_SC" scope="axis2" type="STRING" value="200" />
        </else>
    </filter>
    <log level="custom" category="DEBUG">
        <property name="RestUserStoreScimDeleteSeq" value="Fin.." />
    </log>
</sequence>