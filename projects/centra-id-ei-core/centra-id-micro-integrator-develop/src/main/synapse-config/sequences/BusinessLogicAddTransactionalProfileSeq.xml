<?xml version="1.0" encoding="UTF-8"?>
<sequence name="BusinessLogicAddTransactionalProfileSeq" onError="FaultSeq" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <log level="custom" category="DEBUG">
        <property name="BusinessLogicAddTransactionalProfileSeq" value="Inicio.." />
        <property name="uri.var.globalProfileId" expression="//globalProfileId" />
        <property name="uri.var.transactionalProfileId" expression="//transactionalProfileId" />
    </log>
    <property name="uri.var.globalProfileId" expression="//globalProfileId" />
    <property name="uri.var.transactionalProfileId" expression="//transactionalProfileId" />
    <filter regex="false" source="boolean($ctx:UserName)">
        <then>
            <property name="UserName" expression="get-property('transport','UserName')" />
        </then>
    </filter>
    <!-- Recuperar perfil global - transaccional -->
    <call>
        <endpoint template="HTTPEndpointGetTemplate" uri="{uri.var.enterpriseIntegratorHost}/api.centraid/application/GlobalTransactionalProfileSimple/0/1?transactionalProfileId={uri.var.transactionalProfileId}&amp;globalProfileId={uri.var.globalProfileId}" />
    </call>
    <filter regex="200" source="get-property('axis2', 'HTTP_SC')">
        <then>
            <filter regex="false" source="boolean(//globalTransactionalProfileSimpleList/globalTransactionalProfileSimple/id/text())">
                <then>
                    <call-template target="GetCurrentDateTemplate" />
                    <payloadFactory media-type="json">
                        <format>
                             {
                                "globalTransactionalProfileSimple": {
                                    "dateCreated": "$1",
                                    "userCreated": "$2",
                                    "dateDeleted": null,
                                    "userDeleted": null,        
                                    "globalProfileId": $3,
                                    "transactionalProfileId": $4
                                
                                }
                            }
                        </format>
                        <args>
                            <arg evaluator="xml" expression="$ctx:currentDate" />
                            <arg evaluator="xml" expression="$ctx:UserName" />
                            <arg evaluator="xml" expression="$ctx:uri.var.globalProfileId" />
                            <arg evaluator="xml" expression="$ctx:uri.var.transactionalProfileId" />
                        </args>
                    </payloadFactory>
                    <call>
                        <endpoint template="HTTPEndpointPostTemplate" uri="{uri.var.enterpriseIntegratorHost}/api.centraid/application/GlobalTransactionalProfileSimple" />
                    </call>
                    <filter regex="200" source="get-property('axis2', 'HTTP_SC')">
                        <then>
                            <property name="globalTransactionalProfileId" expression="//id" />
                            <property name="type" value="+" />
                            <store messageStore="ProfilesSynchronizationStore" />
                            <payloadFactory media-type="json">
                                <format>
                                    {
                                        "result":  {
                                            "code" : 0,
                                            "message" : "Operation performed successfully"
                                        }
                                    }
                                </format>
                                <args />
                            </payloadFactory>
                        </then>
                        <else>
                            <property name="fault" value="Error create GlobalTransactionalProfileSimple" />
                            <sequence key="FaultSeq" />
                        </else>
                    </filter>
                </then>
                <else>
                    <payloadFactory media-type="json">
                        <format>
                            {
                                "result":  {
                                    "code" : -1,
                                    "message" : "There is already a global GlobalTransactionalProfile"
                                }
                            }
                        </format>
                        <args />
                    </payloadFactory>
                </else>
            </filter>
        </then>
        <else>
            <property name="fault" value="Error get GlobalTransactionalProfileSimple" />
            <sequence key="FaultSeq" />
        </else>
    </filter>
    <property name="HTTP_SC" scope="axis2" type="STRING" value="200" />
    <property name="ContentType" value="application/json" scope="axis2" />
    <property name="messageType" value="application/json" scope="axis2" />
    <log level="custom" category="DEBUG">
        <property name="BusinessLogicAddTransactionalProfileSeq" value="Fin.." />
    </log>
</sequence>