<?xml version="1.0" encoding="UTF-8"?>
<sequence name="BusinessLogicFindUsersByCompanyHierarchySeq" onError="FaultSeq" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <log level="custom" category="DEBUG">
        <property name="BusinessLogicFindUsersByCompanyHierarchySeq" value="Inicio.." />
    </log>
    <!-- Cargar variables de entorno -->
    <sequence key="MassiveProcessUsersVariablesLoadSeq" />
    <!-- Recuperar parametro global MAXIMA JERARQUIA PROPIETARIO DE PERFIL (MAJEPRPE) -->
    <property action="remove" name="REST_URL_POSTFIX" scope="axis2" />
    <call>
        <endpoint template="HTTPEndpointGetTemplate" uri="{uri.var.enterpriseIntegratorHost}/api.centraid/common/GlobalParameter?code=MAJEPRPE" />
    </call>
    <property expression="//globalParameter/valueNumber" name="uri.var.hierarchyCode" scope="default" type="STRING" />
    <!-- Recuperar Usuarios por compania , division y jerarquia -->
    <property action="remove" name="Content-Type" scope="transport" />
    <property action="remove" name="REST_URL_POSTFIX" scope="axis2" />
    <call>
        <endpoint template="HTTPEndpointGetTemplate" uri="{uri.var.dataServiceHost}/UsersDSS.HTTPEndpoint/getUserByNameAndCompanyAndHierarchy?name={uri.var.name}&amp;companyCode={uri.var.companyCode}&amp;hierarchyCode={uri.var.hierarchyCode}" />
    </call>
    <property name="messageType" scope="axis2" type="STRING" value="application/json" />
    <property name="Access-Control-Allow-Origin" scope="transport" type="STRING" value="*" />
    <property name="Access-Control-Allow-Headers" scope="transport" type="STRING" value="Origin, X-Requested-With, Content-Type, Accept" />
    <log level="custom" category="DEBUG">
        <property name="BusinessLogicFindUsersByCompanyHierarchySeq" value="Fin..." />
    </log>
</sequence>